# ===========================================
# Audlex - Variables de Entorno
# ===========================================
# Copia este archivo como .env.local y rellena los valores

# --- Supabase ---
NEXT_PUBLIC_SUPABASE_URL=https://tu-proyecto.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key
DATABASE_URL=postgresql://postgres:password@db.tu-proyecto.supabase.co:5432/postgres

# --- Stripe ---
# Obtén las claves en: https://dashboard.stripe.com/test/apikeys
# Ver STRIPE_SETUP.md para instrucciones completas
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxx
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# Stripe Price IDs (cópialos de Products → [tu producto] → Price ID)
# Ver STRIPE_SETUP.md paso 2 para crear los productos
# Planes mensuales
STRIPE_PRICE_STARTER=price_xxx
STRIPE_PRICE_BUSINESS=price_xxx
STRIPE_PRICE_ENTERPRISE=price_xxx
STRIPE_PRICE_CONSULTORA=price_xxx

# Planes anuales (con 20% descuento)
STRIPE_PRICE_STARTER_ANNUAL=price_xxx
STRIPE_PRICE_BUSINESS_ANNUAL=price_xxx
STRIPE_PRICE_ENTERPRISE_ANNUAL=price_xxx
STRIPE_PRICE_CONSULTORA_ANNUAL=price_xxx

# --- Resend (Email) ---
RESEND_API_KEY=re_xxx
FROM_EMAIL=Audlex <noreply@audlex.com>

# --- Security ---
CRON_SECRET=your-random-secret-here

# --- App ---
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Audlex
